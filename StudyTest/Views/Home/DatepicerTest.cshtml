
@{
    ViewBag.Title = "DatepicerTest";
}

@section css{
<link href="~/Content/bootstrap-datepicker/css/daterangepicker-bs3.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <style type="text/css">

        #datetimepicker1 .input-group-addon .glyphicon-calendar{
            right:6px;
        }
        #datetimepicker1{
            display:inline-flex;
        }
        #datetimepicker1 .input-group-addon{
            padding:6px 20px;
        }
    </style>
}

<h2>DatepicerTest</h2>
<div class="container row">
    <div class="FunctionKey">
        @Html.ActionLink("Home", "Index", null, new { @class = "btn btn-primary" })
        <a href="@Url.Action("DatepicerTest2", "Home")" class="btn btn-primary"><span>練習2</span></a>
    </div>
    <hr />
    <div class="form-group">
        <div class="input-group date" id="datetimepicker1">
            <input type="text" class="form-control" name="datefilter" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
</div>

    @section scripts{
        <script src="~/scripts/bootstrap-datepicker/test/moment.js"></script>
        <script src="~/scripts/bootstrap-datepicker/test/bootstrap-datetimepicker.min.js"></script>
        <script src="~/scripts/bootstrap-datepicker/test/daterangepicker.js"></script>

        <script type="text/javascript">
            var tw = {
                applyLabel: '確定',
                cancelLabel: '取消',
                fromLabel: '自',
                toLabel: '至',
                customRangeLabel: 'Custom',
                daysOfWeek: ['日', '一', '二', '三', '四', '五', '六'],
                monthNames: ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月'],
                firstDay: 1,
                twYear: '年',
                twName: '民國',
                localelang: 'tw'
            }
            var en = {
                applyLabel: 'OK',
                cancelLabel: 'Cancel',
                fromLabel: 'From',
                toLabel: 'to',
                customRangeLabel: 'Custom',
                daysOfWeek: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
                monthNames: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                firstDay: 1,
                twYear: '',
                twName: '',
                localelang: ''
            }
            $(function () {
                $('input[name="datefilter"]').daterangepicker({
                    autoUpdateInput: false,
                    opens: 'right',
                    format: 'R-MM-DD',
                    separator: ' ~ ',
                    startDate: moment().subtract('days', 90),
                    endDate: moment(),
                    dow: 2,
                    locale: tw,
                });

                //$('input[name="datefilter"]').on('click', function (ev, picker) {
                //    alert('apply clicked!');
                //});

                $('input[name="datefilter"]').on('apply.daterangepicker', function (ev, picker) {
                    $(this).val($('input[name="daterangepicker_start"]').val() + ' ~ ' + $('input[name="daterangepicker_end"]').val());

                });

                $('input[name="datefilter"]').on('cancel.daterangepicker', function (ev, picker) {
                    $(this).val('');
                });
            })


        </script>
    }
