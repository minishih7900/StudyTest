@model  Study.Models.Models.SelectLotNumber
@{
    ViewBag.Title = "最合數字";
}

@section css{
    <style type="text/css">
         .table-hover thead tr th,.table-hover tbody tr td{
       text-align:center;
    }
    .table-hover tbody tr th{
       background-color:aliceblue;
       text-align:center;
    }
    </style>
}
    <h2>最合數字</h2>
<!--第1個表格-->
<div class="container row">
    <div class="FunctionKey">
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary" })
        <button id="functionBnt" class="btn btn-primary">功能</button>
    </div>
    <hr />
    <div class="QueryConditions">
@using (Html.BeginForm("QuerySelectNumberCount", "Lottery", FormMethod.Post, new { @role = "form", @class = "" }))
{
    <div class="form-group col-lg-6">
        <div class="col-lg-6">
            <label for="StartDate"><b>開始日期</b></label>
            <input type="text" class="form-control" placeholder="格式如：20190101" name="StartDate" maxlength="8" oninput="value=value.replace(/[^\d]/g,'')" autocomplete="off">
            <label for="StartDate"><b>結束日期</b></label>
            <input type="text" class="form-control" placeholder="格式如：20190101" name="EndDate" maxlength="8" oninput="value=value.replace(/[^\d]/g,'')" autocomplete="off">
        </div>
        <div class="col-lg-6">
            <label for="StartDate"><b>開始期數</b></label>
            <input type="text" class="form-control" placeholder="請輸入開始期數 格式如：1" name="StartPeriod" oninput="value=value.replace(/[^\d]/g,'')" autocomplete="off">
            <label for="StartDate"><b>結束期數</b></label>
            <input type="text" class="form-control" placeholder="請輸入結束期數 格式如：1" name="EndPeriod" oninput="value=value.replace(/[^\d]/g,'')" autocomplete="off">
        </div>
    </div>
    <div class="form-group  col-lg-6">
        <div class="col-lg-6">
            <label for="StartDate"><b>開始到結束期數</b></label>
            <input type="text" class="form-control" readonly value="@ViewBag.Data">
            <br />
            @ViewBag.Message
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">#</th>
                <th scope="col">First</th>
            </tr>
        </thead>

        <tbody>

            @for (int j = 0; j < 10; j++)
            {
                <tr>
                    @for (int i = 0; i < 4; i++)
                    {
                        <th scope="row">
                            <input class="btn btn-warning" name="selectnum" type="submit" id="selectnum" value=@i@j />
                        </th>
                        string dd = @Convert.ToString(i) + Convert.ToString(j);
                        <td>@Model.selectNumberCountDarry[int.Parse(dd)]</td>
                    }
                </tr>
            }
        </tbody>

    </table>
}
    </div>
    <!--第2個表格-->
    <div class="col-lg-12">

        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">second</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.selectNumberCountListOrderBy.Count != 0)
                    {
                        for (int i = 0; i < 10; i++)
                        {
                            <tr id="num_@(i + 1)">
                                <th scope="row">@(i + 1)</th>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Key</td>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">second</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.selectNumberCountListOrderBy.Count != 0)
                    {
                        for (int i = 10; i < 20; i++)
                        {
                            <tr id="num_@(i + 1)">
                                <th scope="row">@(i + 1)</th>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Key</td>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">second</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.selectNumberCountListOrderBy.Count != 0)
                    {
                        for (int i = 20; i < 30; i++)
                        {
                            <tr id="num_@(i + 1)">
                                <th scope="row">@(i + 1)</th>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Key</td>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">second</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.selectNumberCountListOrderBy.Count != 0)
                    {
                        for (int i = 30; i < 39; i++)
                        {
                            <tr id="num_@(i + 1)">
                                <th scope="row">@(i + 1)</th>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Key</td>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section scripts{
    <script>
        $("tr[id^='num_']").each(function (data) {
            if (data < 10) {
                $(this).children('td').css("color", "red");
                $(this).children('td').css("font-weight", "bold");
            }
        }
      )
    </script>
}