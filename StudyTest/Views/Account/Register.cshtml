@using Study.Models.Models
@model member
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<!-- The Modal (contains the Sign Up form) -->
@using (Html.BeginForm("RegisterAdd", "Account", FormMethod.Post, new { @role = "form", @class = "", @id = "Register", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container LoginCon">
        <p>請輸入資料進行註冊程序</p>
        <hr>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.email)
            <input type="text" class="form-control" placeholder="請輸入email" name="email" required>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.password)
            <input type="password" class="form-control" placeholder="請輸入密碼" name="psw" required>
        </div>
        <div class="form-group">
            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" class="form-control" placeholder="確認輸入密碼" name="psw-repeat" required>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="remember" style="margin-bottom:15px"> Remember me
            </label>
        </div>
        <br />
        <button type="submit" class="signupbtn">送出</button>
        <br />
    </div>
}


